<% layout("layouts/boilerplate"); %>

<style>
  .auth-container {
    max-width: 420px;
    margin: 56px auto;
    background: #fff;
    padding: 28px;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(35, 49, 79, 0.06);
    font-family: Inter, Arial, sans-serif;
  }
  .auth-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }
  .auth-header h2 {
    margin: 0;
    color: #23314f;
    font-size: 1.4rem;
  }
  .auth-sub {
    color: #6b7280;
    margin-bottom: 16px;
  }

  .form-group {
    margin-bottom: 12px;
  }
  label {
    display: block;
    font-weight: 600;
    color: #374151;
    margin-bottom: 6px;
  }
  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid rgba(35, 49, 79, 0.12);
    border-radius: 8px;
    font-size: 1rem;
    box-sizing: border-box;
  }

  .btn-primary {
    display: inline-block;
    background: linear-gradient(90deg, #ff7b00, #ff6b35);
    color: #fff;
    padding: 10px 16px;
    border-radius: 10px;
    border: none;
    font-weight: 700;
    cursor: pointer;
    width: 100%;
  }

  .auth-footer {
    text-align: center;
    margin-top: 14px;
  }
  .muted {
    color: #6b7280;
  }

  .form-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }
  .remember {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #374151;
  }

  .errors {
    background: #fff5f5;
    border: 1px solid #fecaca;
    color: #991b1b;
    padding: 10px 12px;
    border-radius: 8px;
    margin-bottom: 12px;
  }

  @media (max-width: 520px) {
    .auth-container {
      margin: 20px;
      padding: 18px;
    }
  }
</style>

<div class="auth-container">
  
  <div class="auth-sub">
    <h2>Welcome back</h2>
  </div>

  <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
  <div class="errors"><%= errorMsg %></div>
  <% } %> <% if (typeof errors !== 'undefined' && errors.length) { %>
  <div class="errors">
    <ul style="margin: 0; padding-left: 18px">
      <% errors.forEach(function(err){ %>
      <li><%= err.msg || err %></li>
      <% }) %>
    </ul>
  </div>
  <% } %>

  <form action="/login" method="POST" novalidate>
    <div class="form-group">
      <label for="email">Email address</label>
      <input
        id="email"
        name="email"
        type="email"
        required
        value="<%= typeof body !== 'undefined' ? body.email || '' : '' %>"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" name="password" type="password" required />
    </div>

    <div class="form-group form-row">
      <label class="remember"
        ><input type="checkbox" name="remember" /> Remember me</label
      >
      <a href="/forgot">Forgot password?</a>
    </div>

    <button class="btn-primary" type="submit">Sign in</button>
  </form>

  <div class="auth-footer muted">
    Don't have an account? <a href="/signup">signup</a>
  </div>
</div>
